    title:"The Iron Yard | Digital Health Accelerator",
    description:"$20,000 in seed capital, demo days in Silicon Valley, three months of incredible mentorship and weekly workshops from experts in healthcare innovation, and more!"
  })

block content
  +navigation({
    title: 'Digital Health Program',
    color: 'turquoise',
